{% if attr.onchange is defined %}
    {% if not (attr.onchange ends with ';') %}
        {% set attr = attr|merge({'onchange': attr.onchange ~ ';'}) %}
    {% endif %}
    {% set attr = attr|merge({'onchange': attr.onchange ~ ' ' ~ onchange}) %}
{% else %}
    {% set attr = attr|merge({'onchange': onchange}) %}
